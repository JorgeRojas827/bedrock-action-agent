    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^29.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.0",
        "@vercel/ncc": "^0.38.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "keywords": [
        "github-actions",
        "amazon-bedrock",
        "code-review",
        "ai",
        "aws"
