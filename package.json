{
    "name": "custom-amazon-bedrock-agent-action",
    "version": "0.6.0",
    "description": "Custom Amazon Bedrock Agent for GitHub Actions",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
        "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
        "build": "ncc build index.js -o dist --source-map --license licenses.txt",
        "prepare": "npm run build"
